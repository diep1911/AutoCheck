-- Script xóa đồ họa và đặt màu xám
local Workspace = game:GetService("Workspace")
local Lighting = game:GetService("Lighting")

-- Xóa tất cả các đối tượng trong Workspace
for _, object in pairs(Workspace:GetChildren()) do
    if object ~= game.Players.LocalPlayer.Character then -- Không xóa nhân vật người chơi
        object:Destroy()
    end
end

-- Đặt màu nền thành màu xám
Lighting.Ambient = Color3.fromRGB(128, 128, 128) -- Màu xám trung tính
Lighting.Brightness = 1
Lighting.GlobalShadows = false
Workspace.Terrain:Clear() -- Xóa địa hình nếu có

-- Đặt Camera để tránh lỗi
local Camera = Workspace.CurrentCamera
Camera.CameraType = Enum.CameraType.Fixed
Camera.CFrame = CFrame.new(Vector3.new(0, 10, 0))
